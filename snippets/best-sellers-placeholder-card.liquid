{% doc %}
  Renders a placeholder product card for the theme editor.

  @param {number} index - The product index in the list

  @example
  {% render 'best-sellers-placeholder-card', index: 1 %}
{% enddoc %}

<div class="product-card" data-product-index="{{ index }}">
  <div class="group flex flex-col">
    <div class="relative aspect-square bg-gray-200 rounded-lg overflow-hidden mb-4">
      {{ 'product-1' | placeholder_svg_tag: 'w-full h-full object-cover' }}
      <div class="absolute top-3 left-3">
        <span class="product-badge product-badge--best-seller">
          {{ 'products.badges.best_seller' | t }}
        </span>
      </div>
    </div>
    <div class="space-y-2">
      <h3 class="text-sm md:text-base font-medium line-clamp-2">{{ 'products.product_title' | t }} {{ index }}</h3>
      <div class="flex items-center gap-2 text-sm">
        <div class="flex items-center gap-0.5">
          <!-- 4.5 stars example -->
          {% for i in (1..4) %}
            <svg class="w-4 h-4 fill-current text-black" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
            </svg>
          {% endfor %}
          <svg class="w-4 h-4 text-black" viewBox="0 0 24 24">
            <defs>
              <linearGradient id="half-placeholder">
                <stop offset="50%" stop-color="currentColor"/>
                <stop offset="50%" stop-color="transparent"/>
              </linearGradient>
            </defs>
            <path fill="url(#half-placeholder)" stroke="currentColor" stroke-width="1" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
          </svg>
        </div>
        <span class="text-gray-600">4.5 (1234 {{ 'products.reviews' | t }})</span>
      </div>
      <div class="text-lg font-bold">$104.95</div>
    </div>
  </div>
</div>
