{% doc %}
  Renders a partial (gradient-filled) star icon.

  @param {string} product_id - Unique product ID for gradient
  @param {number} index - Card index for unique gradient ID
  @param {number} remainder_percent - Percentage of star to fill (0-100)

  @example
  {% render 'icon-star-partial', 
    product_id: product.id,
    index: forloop.index,
    remainder_percent: 75
  %}
{% enddoc %}

<svg class="w-2.5 md:w-4 h-2.5 md:h-4 text-black" viewBox="0 0 24 24">
  <defs>
    <linearGradient id="partial-{{ product_id }}-{{ index }}">
      <stop offset="{{ remainder_percent }}%" stop-color="currentColor"/>
      <stop offset="{{ remainder_percent }}%" stop-color="transparent"/>
    </linearGradient>
  </defs>
  <path fill="url(#partial-{{ product_id }}-{{ index }})" stroke="currentColor" stroke-width="1" d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
</svg>
